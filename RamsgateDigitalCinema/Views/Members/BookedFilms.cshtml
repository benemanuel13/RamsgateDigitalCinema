@model List<RamsgateDigitalCinema.ViewModels.Members.BookedFilmViewModel>

@{
    ViewData["Title"] = "My Booked Films";
}

<div class="text-center">
    <h3 class="" style="margin-bottom: 20px;">MY BOOKED FILMS</h3>
</div>

<div class="container">
    @foreach (var film in Model)
    {
        <div class="even row" style="margin: 4px; padding: 9px;">
            <div class="col-md-6">
                <h4>@film.Title.ToUpper()</h4>
            </div>
            <div class="col-md-3">
                <h6>@film.Showing.ToString("dddd dd MMMM yyyy HH:mm")</h6>
            </div>
            <div class="col-md-3">
                <div style="text-align: right;">
                    @if (film.Showing < (DateTime)ViewBag.CurrentTime && !film.IsExtra)
                    {
                        <a class="btn btn-danger" href="/Members/ShowFilm/@film.FilmID">Watch Now</a>
                    }        
                </div>
            </div>
        </div>
    }
</div>